{
  "name": "sanji-exception-ui",
  "author": "Zack Yang <zack9433@gmail.com> (https://github.com/zack9433)",
  "description": "sanji-exception-ui UI",
  "version": "0.0.0-semantically-released",
  "main": "dist/sanji-exception-ui.js",
  "config": {
    "ghooks": {
      "pre-commit": "opt --in pre-commit --exec 'npm run validate'"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "validate": "npm run test:once && npm run check-coverage",
    "start": "cross-env NODE_ENV=development node server/dev-server.js",
    "prebuild": "rimraf dist && mkdir dist",
    "build": "cross-env NODE_ENV=production webpack --config webpack.build.js --display-modules",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 75 --branches 75 --functions 75 --lines 75",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "cross-env NODE_ENV=test mocha -w --require ./scripts/mocha-bootload.js -R spec ./app/component/*.spec.js",
    "test:once": "nyc mocha --require ./scripts/mocha-bootload.js -R spec ./app/component/*.spec.js && nyc report --reporter=html --reporter=lcov",
    "publish-latest": "publish-latest",
    "semantic-release": "semantic-release pre && npm publish && npm run publish-latest && semantic-release post"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "scripts/mocha-bootload.js",
      "dist",
      "build"
    ],
    "report-dir": "./coverage"
  },
  "devDependencies": {
    "angular-mocks": "~1.5.0",
    "autoprefixer-loader": "~3.2.0",
    "babel-core": "^6.0.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.0.0",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-lodash": "^3.2.4",
    "babel-preset-es2015": "^6.9.0",
    "benv": "~3.1.0",
    "chai": "~3.5.0",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.8.0",
    "cross-env": "~3.0.0",
    "css-loader": "^0.24.0",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.3.0",
    "eslint-loader": "^1.3.0",
    "file-loader": "~0.9.0",
    "ghooks": "^1.2.0",
    "html-webpack-plugin": "~2.22.0",
    "jquery": "~2.2.0",
    "lodash-webpack-plugin": "^0.10.0",
    "mocha": "^3.0.0",
    "ng-annotate-loader": "^0.2.0",
    "ng-cache-loader": "^0.0.15",
    "node-bourbon": "~4.2.3",
    "node-sass": "~3.10.0",
    "nyc": "^7.0.0",
    "opt-cli": "~1.5.1",
    "postcss-loader": "^0.11.0",
    "progress-bar-webpack-plugin": "^1.9.0",
    "publish-latest": "~1.1.2",
    "raw-loader": "~0.5.1",
    "rimraf": "~2.5.4",
    "sass-loader": "~4.0.0",
    "semantic-release": "^4.3.5",
    "style-loader": "~0.13.0",
    "toastr": "~2.1.2",
    "url-loader": "~0.5.7",
    "webpack": "^2.1.0-beta.24",
    "webpack-dev-server": "^2.1.0-beta.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sanji-IO/sanji-exception-ui.git"
  },
  "bugs": {
    "url": "https://github.com/Sanji-IO/sanji-exception-ui/issues"
  },
  "keywords": [
    "sanji",
    "exception"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Sanji-IO/sanji-exception-ui",
  "dependencies": {
    "angular": "~1.5.0",
    "sanji-logger-ui": "~1.2.7"
  }
}
